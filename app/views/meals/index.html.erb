<div class="container">
  <section class="actions">
    <p>
      <%= link_to "Add meal", new_meal_path %>
    </p>
  </section>

  <section>
    <table class="table-minimal">
      <thead>
        <tr>
          <th>Meal Name</th>
        </tr>
      </thead>
      <tbody>
        <% @meals.each do |meal| %>
          <tr>
            <td><h4><%= link_to meal.name, meal %></h4></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</div>
